# =============================================================================
# Face Recognition Attendance System - Environment Configuration
# =============================================================================
# 
# INSTRUCTIONS:
# 1. Copy this file to '.env' in the same directory
# 2. Update the values below with your specific configuration
# 3. For production, change DEBUG=False and update security keys
# =============================================================================

# Database Configuration
DATABASE_URL=postgresql://facerecog_user:your_secure_password_here@localhost:5432/face_recognition_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=face_recognition_db
DB_USER=facerecog_user
DB_PASSWORD=your_secure_password_here  # CHANGE THIS!

# Security Keys (IMPORTANT: Change these in production!)
SECRET_KEY=face-recognition-super-secret-key-change-this-in-production-2024  # CHANGE THIS!
JWT_SECRET_KEY=jwt-secret-key-for-face-recognition-system-change-in-production  # CHANGE THIS!
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Application Settings
DEBUG=True                              # Set to False for production
LOG_LEVEL=INFO                         # Use WARNING for production
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Face Recognition Settings
FACE_DETECTION_THRESHOLD=0.5           # Lower = more sensitive detection
FACE_RECOGNITION_THRESHOLD=0.6         # Lower = more lenient matching
MAX_FACE_DISTANCE=0.4
FACE_MATCH_THRESHOLD=0.6

# Camera Settings
DEFAULT_CAMERA_RESOLUTION_WIDTH=1920
DEFAULT_CAMERA_RESOLUTION_HEIGHT=1080
DEFAULT_CAMERA_FPS=30
MAX_CAMERAS=16
CAMERA_TIMEOUT=10

# Performance Settings
ENABLE_GPU=True                        # Set to False if no CUDA GPU
GPU_MEMORY_FRACTION=0.7
BATCH_SIZE=1
NUM_WORKERS=4
MAX_DETECTION_THREADS=4

# File Paths
UPLOAD_DIR=uploads
FACE_ENCODINGS_DIR=face_encodings
LOGS_DIR=logs
STATIC_DIR=static

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]  # Update for production

# Attendance Settings
ATTENDANCE_COOLDOWN_MINUTES=5
AUTO_CHECKOUT_HOURS=12

# System Settings
SYSTEM_NAME=Face Recognition Attendance System
SYSTEM_VERSION=1.0.0
ADMIN_EMAIL=admin@company.com          # Update with your email

# Production Settings (uncomment and modify for production)
# DEBUG=False
# LOG_LEVEL=WARNING
# CORS_ORIGINS=["https://yourdomain.com"]
# SECRET_KEY=your-production-secret-key-64-characters-minimum
# JWT_SECRET_KEY=your-production-jwt-key-64-characters-minimum
