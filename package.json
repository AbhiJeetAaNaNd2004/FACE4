{
  "name": "face-recognition-attendance-system",
  "version": "1.0.0",
  "description": "Complete face recognition attendance system with FastAPI backend and React frontend. See SETUP_GUIDE.md for comprehensive setup instructions.",
  "scripts": {
    "dev": "concurrently \"python3 start_unified_server.py --reload\" \"cd frontend && npm start\"",
    "dev:backend": "python3 start_unified_server.py --reload",
    "dev:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "pip3 install -r requirements.txt",
    "install:all": "npm run install:backend && npm run install:frontend",
    "init:db": "python3 start_unified_server.py --init-db",
    "setup:postgresql": "python3 setup_postgresql.py",
    "start": "python3 start_unified_server.py",
    "start:force": "python3 start_unified_server.py --force",
    "cleanup:port": "python3 cleanup_port.py 8000",
    "check:env": "python3 check_env.py",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && pytest"
  },
  "keywords": [
    "face-recognition",
    "attendance-system",
    "fastapi",
    "react",
    "typescript",
    "computer-vision"
  ],
  "author": "Face Recognition Attendance System",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}