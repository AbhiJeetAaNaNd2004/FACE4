# =============================================================================
# Face Recognition Attendance System - Environment Configuration
# =============================================================================
# 
# IMPORTANT: Copy this file to '.env' and update the values below
# Location: backend/.env
#
# Required variables are marked with (REQUIRED)
# Optional variables have default values shown
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=frs_db
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here  # (REQUIRED)

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT authentication settings
SECRET_KEY=your_super_secure_secret_key_here_minimum_32_characters  # (REQUIRED)
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Frontend and allowed origins
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# FACE RECOGNITION CONFIGURATION
# =============================================================================
# Face recognition algorithm settings
FACE_RECOGNITION_TOLERANCE=0.6
FACE_DETECTION_MODEL=hog
FACE_ENCODING_MODEL=large

# =============================================================================
# CAMERA CONFIGURATION
# =============================================================================
# Camera and streaming settings
DEFAULT_CAMERA_ID=0
MAX_CONCURRENT_STREAMS=5
STREAM_QUALITY=medium
FRAME_RATE=30

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# File upload and storage settings
UPLOAD_DIR=uploads
FACE_IMAGES_DIR=face_images
MAX_FILE_SIZE=10485760  # 10MB in bytes

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Application logging settings
LOG_FILE=logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# =============================================================================
# FACE TRACKING SYSTEM (FTS) CONFIGURATION
# =============================================================================
# FTS startup and behavior settings
FTS_AUTO_START=true
FTS_STARTUP_DELAY=2
FACE_TRACKING_AUTO_START=true

# =============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# FTS_AUTO_START=false  # Manual start in production recommended